<?xml version="1.0" encoding="utf-8" ?>
<!-- This log config file is intended only for running PalMon as a Windows service.
     This configuration lacks the console output (target), since it seems that
     NLog must not write to console, when running as a service. It should be
     the only difference. -->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extensions>
    <add assembly="LogentriesNLog"/>
  </extensions>
  <targets async="true">
    <target name="nlog_txt_file"
            xsi:type="File"
            fileName="Logs\PalMon.nlog.txt"
            layout="${date} ${pad:padding=-5:inner=[${threadid}]} ${pad:padding=-8:inner=${level:uppercase=true}} ${logger}} - ${message}"
            archiveAboveSize="1000000"
            maxArchiveFiles="100"
            archiveNumbering="Rolling"
            archiveEvery="None" />

    <target name="logentries"
            type="Logentries"
            token="<TOKEN>"
            layout="${date} ${pad:padding=-5:inner=[${threadid}]} ${pad:padding=-8:inner=${level:uppercase=true}} ${logger}} - ${message}"
            debug="true"
            httpPut="false"
            ssl="false" />
  </targets>
  <rules>
    <logger name="*" minlevel="Info" maxlevel="Fatal" writeTo="nlog_txt_file" />
    <logger name="*" minlevel="Info" maxlevel="Fatal" writeTo="logentries" />
  </rules>
</nlog>

